# Production Environment Configuration
# AI Usage Analytics Dashboard

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=ai-workflows-459123
BIGQUERY_DATASET=ai_usage_analytics
BIGQUERY_LOCATION=US

# API Configuration (values stored in Secret Manager)
# CURSOR_API_KEY=secret:cursor-api-key
# ANTHROPIC_API_KEY=secret:anthropic-api-key
# SHEETS_SERVICE_ACCOUNT_KEY=secret:sheets-service-account-key

# Google Sheets Configuration
SHEETS_SPREADSHEET_ID=1vWlZTLQh2GRb7K0GaHJugxI1g42bsn9GA3DqNmFoM20
SHEETS_RANGE=claude_api_key_owner_map!A:D

# Pipeline Configuration
BATCH_SIZE=1000
MAX_RETRIES=3
BACKOFF_BASE=2
PIPELINE_TIMEOUT_SECONDS=3600

# Monitoring Configuration
ENABLE_CLOUD_LOGGING=true
ENABLE_METRICS_COLLECTION=true
HEALTH_CHECK_INTERVAL_SECONDS=300

# Performance Configuration
MAX_WORKERS=4
MEMORY_LIMIT_MB=1024
CPU_LIMIT_CORES=1

# Data Retention Configuration
RAW_DATA_RETENTION_DAYS=90
PROCESSED_DATA_RETENTION_DAYS=730
LOG_RETENTION_DAYS=30

# Security Configuration
ALLOWED_EMAIL_DOMAINS=samba.tv,company.com
REQUIRE_ATTRIBUTION=true
ENCRYPT_PII=true

# Alert Configuration
ALERT_ON_PIPELINE_FAILURE=true
ALERT_EMAIL=data-team@company.com
ALERT_THRESHOLD_ERROR_RATE=0.1
ALERT_THRESHOLD_COST_VARIANCE=0.2