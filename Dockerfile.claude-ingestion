FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements-claude-ingestion.txt .
RUN pip install --no-cache-dir -r requirements-claude-ingestion.txt

# Copy ingestion script
COPY scripts/ingestion/ingest_claude_data.py .

# Run ingestion (defaults to yesterday if no date provided)
CMD ["python", "ingest_claude_data.py"]
